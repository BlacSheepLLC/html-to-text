{
  "name": "@blac-sheep/html-to-text",
  "version": "0.2.0",
  "description": "A simple utility to convert HTML into text, keeping as much content as possible.",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlacSheepLLC/html-to-text.git"
  },
  "main": "dist/html-to-text.min.js",
  "module": "src/index.js",
  "author": "Blac-Sheep LLC",
  "bugs": {
    "url": "https://github.com/BlacSheepLLC/html-to-text/issues"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "serve": "parcel serve ./test/index.html --open",
    "build": "parcel build ./src/index.js --global HTMLToText --out-file html-to-text.js --no-minify --no-cache --public-url . && parcel build ./src/index.js --global HTMLToText --out-file html-to-text.min.js --no-cache --public-url .",
    "watch": "parcel watch ./src/index.js --global HTMLToText --out-file html-to-text.js --no-cache --public-url .",
    "test": "yarn run cypress run"
  },
  "dependencies": {
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.6.2",
    "@xiphe/cypress-parcel-preprocessor": "^1.0.1-RC.1",
    "babel-eslint": "^10.0.3",
    "core-js": "^3.2.1",
    "cypress": "^3.8.1",
    "cypress-parcel-preprocessor": "^1.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "parcel": "^1.12.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1"
  },
  "files": [
    "package.json",
    "yarn.lock",
    "src/*",
    "dist/*",
    "LICENSE.md",
    "README.md"
  ]
}
